<%= cl_image_tg @article.photo.key, height:300, width: 400, crop: fill %>
<h2><%= @cocktail.name %></h2>
<% @cocktail.doses.each do |dose| %>
  <%= dose.ingredient.name %>
  <%= dose.description %>
  <%= link_to "delete dose", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }%>
<% end %>

